@model Disk

@{

    string title = ViewBag.Action + " Disk";
    ViewBag.Title = title;

}

<h2>@ViewBag.Title</h2>



<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DiskName">Enter Disk Name</label>
        <input asp-for="DiskName" type="text" class="form-control" />
        <span asp-validation-for="DiskName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GenreID">Genre</label>
        <select asp-for="GenreID" class="form-control">
            <option value="">select a Genre</option>
            @foreach (Genre g in ViewBag.Genres)
            {
                <option value="@g.GenreID">@g.Description</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DiskTypeID">DiskType</label>
        <select asp-for="DiskTypeID" class="form-control">
            <option value="">select a DiskType</option>
            @foreach (DiskType dt in ViewBag.DiskTypes)
            {
                <option value="@dt.DiskTypeID">@dt.Description</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StatusID">Status</label>
        <select asp-for="StatusID" class="form-control">
            <option value="">select a Status</option>
            @foreach (Status s in ViewBag.Statuses)
            {
                <option value="@s.StatusID">@s.Description</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ReleaseDate">ReleaseDate: </label>
        <input asp-for="ReleaseDate" type="text" class="form-control" />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>


    <input type="hidden" asp-for="DiskID" />

    <button type="submit" class="btn btn-dark mr-2">@ViewBag.Action</button>
    <a asp-controller="Disk" asp-action="Index" class="btn btn-dark">Cancel</a>
</form>